                    <KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                </accelerator>
            </MenuItem>
        </Menu>
        <!--            <MenuItem fx:id="miOpenProject" mnemonicParsing="false" onAction="#openProject" text="Open Project" />-->
        <MenuItem fx:id="miOpenEnvironment" mnemonicParsing="false" onAction="#openEnvironment" text="Open Environment">
            <accelerator>
                <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
            </accelerator>
        </MenuItem>
        <Menu fx:id="miRecentEnvironments" mnemonicParsing="false" text="Recent Environments" />
