            <accelerator>
                <KeyCodeCombination alt="UP" code="Z" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
            </accelerator>
        </MenuItem>
        <MenuItem fx:id="miImportTestcases" onAction="#importTestCases" text="Import Testcases" />
        <MenuItem fx:id="miExit" onAction="#exit" text="Exit">
            <accelerator>
                <KeyCodeCombination alt="UP" code="Q" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
            </accelerator>
        </MenuItem>
    </Menu>
    <Menu fx:id="mEnvironment" text="_Environment">
        <MenuItem mnemonicParsing="false" onAction="#incrementalBuild" text="Incremental building">
            <accelerator>
                <KeyCodeCombination alt="UP" code="I" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
            </accelerator>
        </MenuItem>
        <MenuItem mnemonicParsing="false" onAction="#updateEnvironment" text="Update Environment">
            <accelerator>
                <KeyCodeCombination alt="UP" code="U" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
            </accelerator>
        </MenuItem>
        <MenuItem mnemonicParsing="false" onAction="#analyzeDependencies" text="Analyze Dependencies">
            <accelerator>
                <KeyCodeCombination alt="UP" code="A" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
            </accelerator>
        </MenuItem>
        <MenuItem mnemonicParsing="false" onAction="#instrumentProject" text="Instrument Project">
            <accelerator>
                <KeyCodeCombination alt="UP" code="P" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
            </accelerator>
        </MenuItem>
        <MenuItem mnemonicParsing="false" onAction="#showAvailableRegressionScripts" text="Regression Scripts" />
