    <Menu fx:id="mEdit" text="E_dit">
        <MenuItem fx:id="miClean" mnemonicParsing="false" onAction="#cleanTestCases" text="Clean at function level">
            <accelerator>
                <KeyCodeCombination alt="UP" code="C" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
            </accelerator>
        </MenuItem>
        <MenuItem fx:id="miCleanAtSourcecodeFileLevel" mnemonicParsing="false" onAction="#cleanTestCasesAtSourcecodeFileLevel" text="Clean at source code file level">
            <accelerator>
                <KeyCodeCombination alt="UP" code="C" control="DOWN" meta="UP" shift="DOWN" shortcut="UP" />
            </accelerator>
        </MenuItem>
    </Menu>
    <Menu fx:id="mRun" text="_Run">
        <MenuItem fx:id="miRunWithoutReport" mnemonicParsing="false" onAction="#runAllSelectedTestCasesWithoutReport" text="Execute Without Report">
            <accelerator>
                <KeyCodeCombination alt="UP" code="R" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
            </accelerator>
        </MenuItem>
        <MenuItem fx:id="miRunWithReport" mnemonicParsing="false" onAction="#runAllSelectedTestCasesWithReport" text="Execute and Show Report">
            <accelerator>
                <KeyCodeCombination alt="UP" code="R" control="DOWN" meta="UP" shift="DOWN" shortcut="UP" />
            </accelerator>
        </MenuItem>
        <MenuItem fx:id="miDebug" mnemonicParsing="false" onAction="#debugTestCase" text="Run With Debugger">
            <accelerator>
                <KeyCodeCombination alt="UP" code="D" control="DOWN" meta="UP" shift="DOWN" shortcut="UP" />
            </accelerator>
        </MenuItem>
        <MenuItem fx:id="miStopAutomatedTestdataGeneration" mnemonicParsing="false" onAction="#stopAllAutomatedTestdataGenerationThread" text="Stop all automated test data generation threads">
            <accelerator>
                <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
            </accelerator>
        </MenuItem>
    </Menu>

    <Menu fx:id="mSetting" text="_Setting">
        <MenuItem fx:id="miAutomatedTestdataGenerationConfig" onAction="#openAutomatedTestdataGenerationConfig" text="Automated Test data generation config">
