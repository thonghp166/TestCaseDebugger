                <KeyCodeCombination alt="UP" code="A" control="DOWN" meta="UP" shift="DOWN" shortcut="UP" />
            </accelerator>
        </MenuItem>
        <MenuItem fx:id="miOpenTextEditorConfig" mnemonicParsing="false" onAction="#openTexteditorConfig" text="Text editor">
