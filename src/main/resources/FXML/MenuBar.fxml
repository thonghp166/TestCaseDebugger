                <KeyCodeCombination alt="UP" code="T" control="DOWN" meta="UP" shift="DOWN" shortcut="UP" />
            </accelerator>
        </MenuItem>
        <MenuItem fx:id="miSetupBoundOfVariableType" onAction="#setupBoundOfVariableType" text="Config bound of variable types">
